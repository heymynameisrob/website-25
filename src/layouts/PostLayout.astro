---
import HomeNav from "@/components/HomeNav.astro";
import Prose from "@/components/Prose.astro";
import Layout from "@/layouts/Layout.astro";

import type { PostFrontmatter } from "@/content.config";

interface Props {
  frontmatter: PostFrontmatter & {
    og?: string;
  };
}

const { frontmatter } = Astro.props;
---

<Layout
  title={`${frontmatter.title} - @heymynameisrob`}
  description={frontmatter.description}
  og={frontmatter.og}
  canonical={frontmatter.canonical}
>
  <HomeNav />
  <div class="max-w-5xl mx-auto">
    <header
      class="py-16 2xl:py-32 px-5 flex flex-col justify-center items-start text-left animate-in fill-mode-backwards fade-in slide-in-from-bottom-4 duration-500 ease-out delay-200 md:items-center md:text-center"
    >
      <h1
        class="text-lg font-medium max-w-prose xl:text-2xl xl:leading-[1.66em] xl:tracking-tight xl:text-balance"
      >
        {frontmatter.title}
      </h1>
      <small class="font-mono font-[500] text-sm text-gray-8 uppercase"
        >{frontmatter.company || frontmatter.type}</small
      >
    </header>
    <Prose><slot /></Prose>
  </div>
</Layout>
