---
import { cn } from "@/lib/utils";

const { className } = Astro.props;
---

<article
  class={cn(
    "w-full max-w-none pb-24 px-5",
    "grid grid-cols-[auto_minmax(auto,56ch)_auto]",
    "[&_>*]:col-start-2 [&_*:not(.demo,.demo_*,.demo *)]:col-start-2  [&_figure]:col-start-1 [&_figure]:col-end-4 [&_section]:col-start-1 [&_section]:col-end-4",
    "prose dark:prose-invert prose-headings:text-xl prose-headings:font-medium prose-p:text-secondary",
    "prose-h1:first-of-type:hidden",
    "prose-code:font-mono prose-code:font-normal prose-code:bg-gray-2 prose-code:before:content-none prose-code:after:content-none prose-code:px-1 prose-code:leading-normal prose-code:rounded dark:prose-code:bg-gray-5",
    "prose-[&_.astro-code]:block prose-pre:[&_code]:bg-transparent",
    "prose-pre:border",
    className,
  )}
>
  <slot />
</article>
