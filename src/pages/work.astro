---
import Layout from "@/layouts/Layout.astro";
import { ArrowUturnLeftIcon } from "@heroicons/react/16/solid";
import Button from "@/components/Button.astro";
import { DemoWrapper } from "@/components/demos/DemoWrapper";

const components = [
  { id: "lantum-grid", name: "Lantum Grid", description: "Grid layout component", isFullWidth: true },
  { id: "filter-menu", name: "Filter Menu", description: "Searchable dropdown filter menu component", isFullWidth: false },
  { id: "checkin", name: "Check-in", description: "Interactive check-in component", isFullWidth: false },
  { id: "lantum-bulk", name: "Lantum Bulk", description: "Bulk action component", isFullWidth: true },
  { id: "calendar", name: "Calendar", description: "Interactive calendar with animations", isFullWidth: false },
  { id: "gallery", name: "Gallery", description: "Masonry photo gallery with lightbox", isFullWidth: false },
  { id: "calculator", name: "Calculator", description: "Expandable calculator menu", isFullWidth: false },
  { id: "form", name: "Form", description: "Animated form with state transitions", isFullWidth: false },
] as const;
---

<Layout title="Work" description="Interactive component demos and UI examples">
  <nav role="navigation" class="flex items-center justify-between p-5">
    <Button size="icon" variant="ghost" href="/"><ArrowUturnLeftIcon className="size-4" /></Button>
    <p class="text-sm text-gray-10">@heymynameisrob</p>
  </nav>
  <div class="p-4 lg:p-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {components.map((item) => (
      <div class={item.isFullWidth ? "md:col-span-2" : ""}>
        <DemoWrapper componentId={item.id} className={item.isFullWidth ? "aspect-video" : ""} client:load />
      </div>
      ))}
    </div>
  </div>
</Layout>
