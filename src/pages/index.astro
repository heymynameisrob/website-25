---
import { AnimateInUp } from "@/components/Motion.tsx";
import Avatar from "@/components/Avatar.astro";

import Layout from "@/layouts/Layout.astro";
import ThemeToggle from "@/components/ThemeToggle.astro";
import AnimatedListItem from "@/components/AnimatedListItem.astro";
import { EnvelopeIcon } from "@heroicons/react/16/solid";
---
<Layout>
  <div
    class="w-full max-w-prose mx-auto flex flex-col gap-8 mt-16 lg:mt-24 lg:gap-10 px-5"
  >
    <AnimateInUp as="header" className="flex flex-col" client:load>
      <div class="flex items-center gap-4">
        <Avatar />
        <div class="flex flex-col">
          <h1 class="text-base leading-snug font-medium cursor-default">
            Rob Hough
          </h1>
          <h2
            class="text-base leading-snug font-medium text-gray-9"
          >
            Design Engineer at <a href="https://n8n.io" target="_blank" rel="noopener noreferrer" class="underline focus rounded hover:text-primary">n8n</a>
          </h2>
        </div>
      </div>
    </AnimateInUp>
    <AnimateInUp
      as="section"
      className="flex flex-col gap-8"
      delay={0.2}
      client:load
    >
      <p class="text-base text-primary text-balance">
        Designing beautifully performant and engaging experiences for the web. I also run <a href="https://cushion.so" target="_blank" rel="noopener noreferrer" class="underline focus rounded">cushion.so</a> on the side with <a href="https://davehawkins.co" target="_blank" rel="noopener noreferrer" class="underline focus rounded">Dave Hawkins</a>. Based in the UK/EU.
      </p>
      <div class="flex items-center gap-2">
        <AnimateInUp delay={0.25} as="div" client:load>
          <a href="mailto:robhough180@gmail.com" target="_blank" rel="noopener noreferrer" class="w-fit px-3 py-1.5 rounded-full text-sm bg-gray-3 flex items-center justify-center gap-2 text-center font-medium hover:bg-gray-4 focus">
            <EnvelopeIcon className="size-4.5" />
